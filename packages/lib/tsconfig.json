{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"alwaysStrict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"listEmittedFiles": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"jsx": "react",
		"skipLibCheck": true,
		"allowUmdGlobalAccess": true,
		"baseUrl": ".",
		"paths": {
			"inner/lib/*": ["./*"],
		},
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
	],
    // "include": [
    //     // "ReactNativeClient/**/*",
    //     // "ElectronClient/**/*",
    //     "packages/app-cli/**/*",
    //     "packages/lib/**/*",
    //     "packages/renderer/**/*",
    //     "packages/tools/**/*",
	// ],
	"exclude": [
		"**/node_modules",
	],
}